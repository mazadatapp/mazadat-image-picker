<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="101dp"
  android:layout_height="76dp"
  android:layout_marginHorizontal="8dp"
  android:layout_marginVertical="4dp"
  android:background="@drawable/custom_gray_round_15">

  <com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:scaleType="centerCrop"
    android:visibility="visible"
    app:riv_corner_radius="8dp"
    app:riv_corner_radius_bottom_left="15dp"
    app:riv_corner_radius_bottom_right="15dp"
    app:riv_corner_radius_top_left="15dp"
    app:riv_corner_radius_top_right="15dp" />

  <com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/overlay_im"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:scaleType="fitXY"
    android:src="@color/black_26"
    app:riv_corner_radius="8dp" />

  <ImageView
    android:id="@+id/selected_im"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/ic_image_picker_check"
    android:text="@string/select_to_edit"
    android:textColor="@color/white_74"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
